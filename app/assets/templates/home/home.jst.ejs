  <div class="col-lg-3 col-xs-6">
    <a href="#/themes" class="home-box">
      <div class="small-box bg-yellow">
        <div class="inner">
          <h3><%= Alistpress.themes.length - sentThemes %></h3>
          <p>Work-in-Progress Templates</p>
        </div>
        <div class="icon">
          <i class="ion ion-android-system-home"></i>
        </div>
        <div class="small-box-footer">
          More info <i class="fa fa-arrow-circle-right"></i>
        </div>
      </div>      
    </a>
  </div>
  
  <div class="col-lg-3 col-xs-6">
    <a href="#/themes/sent" class="home-box">
      <div class="small-box bg-green">
        <div class="inner">
          <h3><%= sentThemes %></h3>
          <p>Email Sent</p>
        </div>
        <div class="icon">
          <i class="ion ion-paper-airplane"></i>
        </div>
        <div class="small-box-footer">
