<div class="jumbotron col-xs-10 col-xs-offset-1">
  <h2><input id="wysihtml5-title" type="text" value="<%= atemplate.escape('title') %>"></h2>

  <p><textarea id="wysihtml5" style="width: 810px; height: 200px;" placeholder="Enter Content">
      <%= atemplate.escape('content') %>
    </textarea>
  </p>
</div>

<script type="text/javascript" charset="utf-8">
$(document).ready(function(){
  
  $('#wysihtml5-title').each(function(i, elem) {
    $(elem).wysihtml5({
    	"font-styles": false,
    	"emphasis": false,
    	"lists": false, 
    	"html": false,
    	"link": false, 
    	"image": false, 
    	"color": false 
    });
  });

  $('#wysihtml5').each(function(i, elem) {
    $(elem).wysihtml5({
    	"font-styles": true,
    	"emphasis": true,
    	"lists": true, 
    	"html": false,
    	"link": true, 
    	"image": true, 
    	"color": true 
    }); 
  });
  
});
</script>