<h1>Welcome to your dashboard, haha..</h1>

<p>
  Dude, I'm the dashboard! :)<br>
  PS: "dude" is gender neutral...
</p>

<hr>
<div class="my-templates col-xs-12 row">
  <h3>My Templates</h3>
  <br>
  <% atemplates.forEach(function(atemplate){ %>
  <div class="panel panel-success col-xs-3">
    <div class="panel-heading">
      <h3 class="panel-title">
        <a href="#/atemplates/<%= atemplate.escape('id') %>"><%= atemplate.escape('title') %></a>
      </h3>
    </div>
    <div class="panel-body">
     <%= atemplate.escape('description') %>
    </div>
    <a href="#/atemplates/<%= atemplate.escape('id') %>/edit"
      class="btn btn-xs btn-default pull-right"   
      style="margin-bottom:10px;">Edit</a>   
  </div>
  <% }) %>

  <div class="col-xs-10 col-xs-offset-1">
    <a href="#/atemplates/new" class='create-template'>Create new template</a>  
  </div>
</div>

<hr>
            
<div class="saved-templates col-xs-12">
  <h3>Saved Templates</h3><br>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Recipient</th>
        <th>Title</th>
        <th>Date Saved</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
  <% Alistpress.themes.forEach(function(theme){ %>
    
    <% if (theme.escape('sent') === 'false') { %>   
    <tr>
      <td><%= theme.escape('recipient_email') %></td>
      <td><%= theme.escape('title') %></td>
      <td><%= theme.escape('updated_at') %></td>
      <td>
        <button class="index-edit-theme">
          <a href="#/themes/<%= theme.escape('id') %>/edit">
            Edit
          </a>
        </button>
        <button class="index-delete-theme" data-id="<%= theme.escape('id') %>">Delete</button>
      </td>
    </tr>
    <% } %>  
  <% }); %>
    </tbody>
  </table>  
</div>

<hr>

<div class="saved-templates col-xs-12">
  <h3>Sent Templates</h3><br>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Recipient</th>
        <th>Title</th>
        <th>Date Sent</th>
      </tr>
    </thead>
    <tbody>
  <% Alistpress.themes.forEach(function(theme){ %>
    <% if (theme.escape('sent') === 'true') { %>            
    <tr>
      <td><%= theme.escape('recipient_email') %></td>
      <td><%= theme.escape('title') %></td>
      <td><%= theme.escape('updated_at') %></td>
    </tr>
    <% } %> 
  <% }); %> 
    </tbody>
  </table>  
</div>

