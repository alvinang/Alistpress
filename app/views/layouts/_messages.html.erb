<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
  <% if name != :notice %>
    <div class="alert alert-<%= name = "danger" %> alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
  <% end %>
<% end %>
