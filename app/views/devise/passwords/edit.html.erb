<div class="omb_login">
  <h3 class="omb_authTitle">Change your password</h3>  
  <div class="row omb_row-sm-offset-3">
    <div class="col-xs-12 col-sm-6">	
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'omb_loginForm', html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class='input-group'>
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: 'New Password', autocomplete: false %>
        </div>
        <br>
        <span class="help-block"></span>
        
        <div class='input-group'>
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control', placeholder: 'Confirm New Password', autocomplete: false %>
        </div>
        <br>
        <span class="help-block"></span>
          
        <%= f.submit "Change my password", class: 'btn btn-lg btn-primary btn-block' %>
      <% end %>    
      <br>      
      <%= render "devise/shared/links" %>    
    </div>
  </div>
</div>
