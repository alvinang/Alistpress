<div class="omb_login">
  <h3 class="omb_authTitle">Forgot your password?</h3>  
  <div class="row omb_row-sm-offset-3">
    <div class="col-xs-12 col-sm-6">	
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'omb_loginForm', html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class='input-group'>
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address' %>
        </div>
        <br>
        <span class="help-block"></span>
          
        <%= f.submit "Send me reset password instructions", class: 'btn btn-lg btn-primary btn-block' %>
      <% end %>    
      <br>      
      <%= render "devise/shared/links" %>    
    </div>
  </div>
</div>